{
  "manifest_version": 3,
  "name": "Stream Track",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "options_page": "options.html",
  "description": "Track and stay updated on streaming activities of your favorite streamers.",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  },
  "oauth2": {
    "client_id": "z5gia7a4ohqd22biljf6c6h0ukj2fk",
    "scopes": ["user:read:follows"]
  },
  "permissions": ["identity", "storage", "alarms"],
  "web_accessible_resources": [
    {
      "resources": [
        "src/chrome-extension/public/fonts/Inter_24pt-Thin.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-ExtraLight.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-Light.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-Regular.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-Medium.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-SemiBold.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-Bold.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-ExtraBold.ttf",
        "src/chrome-extension/public/fonts/Inter_24pt-Black.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
